<Window x:Class="TodoAppNet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoAppNet"
        mc:Ignorable="d"
        Title="Todo App" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#FF4285F4" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="Todo App" FontSize="18" FontWeight="Bold" Foreground="White"
                           VerticalAlignment="Center"/>

                <TextBlock Text="{Binding CurrentUser.Username}" Margin="20 0 0 0"
                           FontSize="16" Foreground="White" VerticalAlignment="Center"/>

                <Button Content="Выйти" Margin="20 0 0 0" Padding="10 5"
                        Command="{Binding LogoutCommand}"
                        Background="#FFEA4335" Foreground="White"
                        HorizontalAlignment="Right"/>
            </StackPanel>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Список задач -->
            <Border Grid.Column="0" BorderBrush="#FFE0E0E0" BorderThickness="0 0 1 0">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Мои задачи" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>

                    <ListView Grid.Row="1" ItemsSource="{Binding TodoItems}" 
                              SelectedItem="{Binding SelectedTodo}"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0 2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <CheckBox Grid.Column="0" IsChecked="{Binding IsCompleted}" 
                                              VerticalAlignment="Center"
                                              Margin="0 0 5 0"/>

                                    <TextBlock Grid.Column="1" Text="{Binding Title}" 
                                               TextTrimming="CharacterEllipsis"
                                               TextDecorations="{Binding IsCompleted, 
                                                   Converter={StaticResource CompletedDecorationConverter}}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Добавить" Command="{Binding AddTodoCommand}"
                                Background="#FF34A853" Foreground="White"/>
                        <Button Content="Удалить" Command="{Binding DeleteTodoCommand}"
                                Background="#FFEA4335" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Детали задачи -->
            <Border Grid.Column="1" Background="#FFF5F5F5" Visibility="{Binding SelectedTodo, Converter={StaticResource NullToVisibilityConverter}}">
                <ScrollViewer Padding="20">
                    <StackPanel>
                        <TextBlock Text="Детали задачи" FontSize="16" FontWeight="Bold" Margin="0 0 0 15"/>

                        <TextBlock Text="Название:" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding SelectedTodo.Title, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Text="Описание:" Margin="0 15 0 0" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding SelectedTodo.Description, UpdateSourceTrigger=PropertyChanged}" 
                                 AcceptsReturn="True" Height="100" TextWrapping="Wrap"/>

                        <TextBlock Text="Срок выполнения:" Margin="0 15 0 0" FontWeight="SemiBold"/>
                        <DatePicker SelectedDate="{Binding SelectedTodo.DueDate}"/>

                        <CheckBox Content="Выполнено" IsChecked="{Binding SelectedTodo.IsCompleted}"
                                  Margin="0 15 0 0"/>

                        <Button Content="Сохранить" Command="{Binding SaveTodoCommand}"
                                HorizontalAlignment="Right" Width="100"
                                Margin="0 20 0 0" Background="#FF4285F4" Foreground="White"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>